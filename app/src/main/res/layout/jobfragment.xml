<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_marginBottom="54dp"
        android:layout_height="2dp"
        android:paddingBottom="10dp"

        android:layout_alignParentTop="true"
        android:background="@color/commonJobsLightBlue"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_image"
        android:src="@mipmap/ic_launcher"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:lineSpacingExtra="-3dp"
        android:id="@+id/desc"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:layout_alignBottom="@+id/leftIco"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignStart="@+id/heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/job_title_fragment"
        android:textColor="#06bebd"
        android:textStyle="bold"
        android:id="@+id/heading"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/leftIco"
        android:layout_toEndOf="@+id/leftIco"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:paddingTop="5dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrowright"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView"
        android:paddingTop="20dp"/>


    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/desc"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@color/commonJobsLightBlue"
        android:paddingBottom="15dp"/>

</RelativeLayout>