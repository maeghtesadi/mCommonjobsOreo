<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/raterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Rating Menu" />

    <Button
        android:id="@+id/btn_rate_seeker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/raterName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="Rate a job seeker" />

    <Button
        android:id="@+id/btn_view_my_ratings_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_rate_seeker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="View My Ratings" />
</RelativeLayout>