<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select years of experience"
    />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/yearsEXP">

        <RadioButton android:id="@+id/yearsOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-3 years"
            />
        <RadioButton android:id="@+id/yearsOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4-6 years"
        />
        <RadioButton android:id="@+id/yearsOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6+ years"
            />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select avaliblity"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/availability">

        <RadioButton android:id="@+id/avalibityOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONLY DAY"
            />
        <RadioButton android:id="@+id/avalibityOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ONLY NIGHT"
            />
        <RadioButton android:id="@+id/avalibityOption3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY OR NIGHT"
        />


    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter expected wage"/>
<EditText
    android:layout_width="80sp"
    android:layout_height="30sp"
    android:id="@+id/expectedwage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:id="@+id/apply"
        />







</LinearLayout>