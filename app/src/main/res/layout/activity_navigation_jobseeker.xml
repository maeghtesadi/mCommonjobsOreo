<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navigation_jobprovider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.oreo.mcommonjobs.Activtity.NavigationActivityForJobSeeker">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View account details"
    android:id="@+id/btn_account"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_title_profile_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="Asap-Regular"
                android:text="Menu"
                android:textAlignment="center"
                android:textColor="#06bebd"
                android:textSize="44sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_view_jobs_for_your_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@drawable/btn_square_menu"
                        android:text="ViewJobs profile jobs"
                        android:textColor="#06bebd" />

                    <Button
                        android:id="@+id/btn_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@drawable/btn_square_menu"
                        android:text="Profile"
                        android:textColor="#06bebd" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="34"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_addjob"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="44"
                        android:background="@drawable/btn_square_menu"
                        android:text="View All Jobs"
                        android:textColor="#06bebd" />

                    <Button
                        android:id="@+id/btn_ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@drawable/btn_square_menu"
                        android:text="Ratings"
                        android:textColor="#06bebd" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_pending_applications"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@drawable/btn_square_menu"
                        android:text="View your pending applications"
                        android:textColor="#06bebd" />

                    <Button

                        android:id="@+id/btn_shared_jobs"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@drawable/btn_square_menu"
                        android:text="Account"
                        android:text="View Shared Jobs"
                        android:textColor="#06bebd" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#06bebd"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
